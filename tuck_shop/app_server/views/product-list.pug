extends layout
include _includes/sharedHTMLfunctions

block content
    .row.banner
        .col-12
            h1= pageHeader.title
                small &nbsp;#{pageHeader.strapline}
    .row
        .col-12.col-md-8
            each product in products
                .card
                    .card-block
                        h4
                            a(href="/products/product")= product.name
                            small &nbsp;
                                +outputRating(product.rating)
                            span.badge.badge-pill.badge-default.float-right= product.price
                        p.address= product.description
                        p.facilities
                            each option in product.options
                                span.badge.badge-warning= option
        .col-12.col-md-4
            p.lead= sidebar